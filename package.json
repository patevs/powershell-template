{
  "name": "powershell-template",
  "version": "2.2.0",
  "description": "PowerShell Script Template",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/powershell-template.git"
  },
  "scripts": {
    "prepare": "husky install",
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "commitlint-config-gitmoji": "^2.2.5",
    "husky": "^8.0.1",
    "np": "^7.6.2"
  },
  "commitlint": {
    "extends": "gitmoji",
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
